
@model IEnumerable<WebApplication1.Models.Article>

        @foreach (WebApplication1.Models.Article article in Model)
        {
            <tr>
                <td width="700px">
                    <text style="float:left; font-size:20px; padding-left:15px;">@Html.ActionLink(article.Name, "news", "Home", new { id = article.ID }, new { @style = "color:black;" })</text><br /><br /><br /><br />
                </td>
                <td width="300px">
                    <center><a href='@Url.Action("news", "Home", routeValues: new { id = article.ID })'><img width="60%" src="@Url.Action("GetImageTop", "Articles", routeValues: new { id = article.ID })" class="img-rounded" style="vertical-align:middle"/></a></center>
                </td>
                <td>
                    <center><span class="glyphicon glyphicon-eye-open" style="font-size:20px; vertical-align:middle"></span> <br /> @article.ViewCount</center>
                </td>
                
            </tr>
        }
    



