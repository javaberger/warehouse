<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/logic/app.js"></script>
    @Styles.Render("~/Content/css")
</head>

<body ng-app="ngmodule">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="panel-title pull-left">
                @using (Html.BeginForm())
                {
                    <button type="submit" class="btn btn-default" value="Search" style="float: right;"><span class=" glyphicon glyphicon-search"></span></button>
                    <div style="overflow: hidden; padding-right: .5em;">
                        <input type="text" class="search-query form-control" placeholder="Search" style="width: 100%; max-width:500px;width:500px;" />
                    </div>
                }
            </div>

            <div class="panel-title pull-right">
                <button type="button" class="btn btn-default pull-right" style="float:left">
                    <span class="glyphicon glyphicon-shopping-cart"></span>
                    Shopping Cart
                </button>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <br />
    <div ng-controller="ngcontroller">
        <table class="table table-bordered table-condensed table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="prod in Products">
                    <td>{{prod.Name}}</td>
                    <td>{{prod.Description}}</td>
                    <td>{{prod.Price | currency}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>


